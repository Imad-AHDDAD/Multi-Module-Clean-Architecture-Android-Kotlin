<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_product_constraint_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="6dp"
    android:background="@drawable/flex_box_product_bg"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/sliding_product_image_view"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/popup_error_icon" />

    <TextView
        android:id="@+id/sliding_product_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/md_theme_light_onSurface"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliding_product_image_view"
        tools:text="Summer Sandals" />

    <TextView
        android:id="@+id/sliding_product_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_onPrimary"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/sliding_product_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/sliding_product_name_text_view"
        tools:text="1399.90 â‚º" />

</androidx.constraintlayout.widget.ConstraintLayout>